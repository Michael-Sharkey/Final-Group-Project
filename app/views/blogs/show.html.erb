<div class="question-box dash row">
      <div class="col-sm-2 thumb text-center">
        Posted by:
        <a href="/users/<%= @blog.user_id %>">
          <%= image_tag @blog.user.avatar.url(:thumb) %>
          <%= @blog.user.username %>
        </a>
      </div>
      <div class="col">
        <h2><%= @blog.title %></h2>
        <small>
          Posted on: <%= @blog.created_at.localtime.strftime("%B %d, %Y") %><br>
          <span class="tags">
            <i class="fa fa-tag"></i>
            <% @blog.tags.each do |tag|  %>
            <%= link_to tag.name, tag_path(tag) %>
            <% end %>
          </span>
        </small>
        <br>
        <% if current_user.id == @blog.user_id || current_user.admin? %>
         <%= link_to "<i class=\"fa fa-pencil-square-o\" aria-hidden=\"true\"></i> Edit Blog Post".html_safe, edit_blog_path(@blog) %><br>
         <%= link_to "<i class=\"fa fa-trash-o\" aria-hidden=\"true\"></i> Delete this blog".html_safe, blog_path, method: :delete, data: {confirm: 'Are you sure?'} %>
        <% end %>
      </div>
 </div>

 <div class="content">
   <%= @blog.body.html_safe %>
 </div>
 <h3>Comments:</h3>
 <%= render @blog.comments %>

   <h3>Add a Comment:</h3>
   <%= render 'comments/form' %>
