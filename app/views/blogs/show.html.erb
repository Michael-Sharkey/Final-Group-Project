<h1><%= @blog.title %></h1><br>
<% if @blog.user_id == current_user.id %>
  <%= render 'edit' %>
<% end %>
<h2>Posted By: <%= @blog.user.username %></h2><br>
<h2><%= @blog.body.html_safe %></h2><br>

<div>Tags: <br>
   <% @blog.tags.each do |tag| %>
     <%= link_to tag.name, tag_path(tag) %>
   <% end %>
</div>

<h2>Comments:</h2>
<%= render @blog.comments %>

<h2>Add a Comment:</h2>
<%= render 'comments/form' %>

<br><br>


<%= link_to 'Back', blogs_path %> <br>
<br>
