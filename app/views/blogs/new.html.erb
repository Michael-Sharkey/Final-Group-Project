<h1>New Post</h1>

<%= form_with model: @blog, local: true  do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %> <br>
  <%= f.label "Body:" %>
  <%= f.trix_editor :body, class: 'trix-content' %> <br>
  <%= f.label :tag_list %> <br>
  <%= f.select :tag_list, options_from_collection_for_select(Tag.all, 'name','name'), prompt: "Select Category" %>
  <%= f.submit "Post" %>
<% end %>
