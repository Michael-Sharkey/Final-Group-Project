<div class="content">

    <h3><%= link_to "Blogs", blogs_path %></h3>
    <%= render 'new' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link @q, :user_id, "User" %></th>
      <th><%= sort_link @q, :title, "Title" %></th>
      <th><%= sort_link @q, :body, "Body"%></th>
      <th><%= sort_link @q, :tags, "Tags"%></th>
      <th><%= sort_link @q, :created_at, "Date" %></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.reverse_each do |b| %>
    <tr>
      <td class="text-center"><a href="/users/<%= b.user_id %>"><%= image_tag b.user.avatar.url(:thumb), class: "thumb-index" %>
      <%= b.user.username %></a></td>
      <td><%= link_to b.title, blog_path(b) %></td>
      <td><%= b.body.html_safe %></td>
      <td><i class="fa fa-tag" aria-hidden="true"></i> <%= link_to b.tags.first, tag_path(b.tags.first) %></td>
      <td><%= b.created_at.localtime.strftime("%B %d, %Y") %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
