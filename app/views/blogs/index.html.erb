<h1>Blogs</h1>
<div class="container">
  <%= search_form_for @q, url: search_blogs_path, html: { method: :post } do |f| %>
  <%= f.search_field :title_or_body_cont %>
  <%= f.submit "Search" %>
<% end %>

<table class="table">
  <thead class="thead">
    <tr>
      <th><%= sort_link @q, :user_id, "User" %></th>
      <th><%= sort_link @q, :user_id, "User" %></th>
      <th><%= sort_link @q, :title, "Title"%></th>
      <th><%= sort_link @q, :body, "Body"%></th>
      <th><%= sort_link @q, :created_at, "Date" %></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |b| %>
    <tr>
      <td><%= image_tag b.user.avatar.url(:thumb), class: "thumb" %><br></td>
      <td><%= b.title %></td>
      <td><%= b.body.html_safe %></td>
      <td><%= b.tags.first.name %></td>
      <td><%= b.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
