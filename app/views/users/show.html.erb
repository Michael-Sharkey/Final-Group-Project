<h1>User <%= @user.id %> Homepage</h1>

<%= image_tag @user.avatar.url(:middle) %><br>
<%= @user.username %><br>
<%= @user.location %><br>





<% if current_user.id == @user.id || current_user.admin? %>
<%= link_to "Edit Your Info", edit_user_path(current_user) %><br>
<%= link_to 'Delete user', user_path, method: :delete, data: {confirm: 'Are you sure?'} %><br>
<% end %>

<%= link_to "Blog Posts", blogs_path %><br>

<% if current_user.admin? && !@user %>
<%= link_to "Make user admin", user_path, method: :makeAdmin %>
<% end %>
<hr>
