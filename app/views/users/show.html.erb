<h1>User <%= @user.id %> Homepage</h1>

<%= image_tag @user.avatar.url(:middle) %><br>
<%= @user.username %><br>
<%= @user.location %><br>





<% if current_user.id == @user.id || current_user.admin? %>
<%= link_to "Edit User Info", edit_user_path(@user) %><br>
<% end %>

<%= link_to "Blog Posts", blogs_path %><br>

<% if current_user.admin? && current_user.id != @user.id %>
<%= button_to "Make user admin", user_path(@user), :controller => :users_controller, action: :makeAdmin %>
<% end %>
<hr>
