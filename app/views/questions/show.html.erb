
<div class="question-box dash row">
      <div class="col-sm-2 thumb text-center">
        Asked by:
        <a href="/users/<%= @question.user_id %>">
          <%= image_tag @question.user.avatar.url(:thumb) %>
          <%= @question.user.username %>
        </a>
      </div>
      <div class="col">
        <h2><%= @question.title %></h2>
          <h4><%= @question.body.html_safe %></h4>
        <small>
          Posted on: <%= @question.created_at.localtime.strftime("%B %d, %Y") %><br>
          <span class="tags">
            <i class="fa fa-tag"></i>
            <% @question.tags.each do |tag|  %>
            <%= link_to tag.name, tag_path(tag) %>
            <% end %>
          </span>
        </small>
        <br>
        <% if current_user.id == @question.user_id || current_user.admin?%>
         <%= render 'edit' %>
      <% end %>
        <% if current_user.id == @question.user_id || current_user.admin? %>

        <% end %>

  </div>
 </div>
 <h3>Answers:</h3>
 <div class="">
       <%= 'No answer yet' if @question.answers.empty? %>
    <%= render 'answers/show' %>
     <hr>
     <%= render 'answers/new' %>
    
   <% if current_user.id == @question.user_id || current_user.admin? %>
<% end %>
 </div>
