<%= form_with model: @tag, local: true do |f| %>
<% if @tag.errors.any? %>
  <div id="explain_error">
    <h2>
      Uh oh!
      <%= pluralize(@tag.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
    <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= f.label "Tag Name:" %>
  <%= f.text_field :name %>
  <br>
  <%= f.submit %>
</div>
<% end %>
