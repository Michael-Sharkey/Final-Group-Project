<div class="content">
  <h2>View questions about <strong><%= @tag.name %></strong>:</h2>
  <ul><%= 'No questions yet.' if @tag.questions.empty? %>
    <% @tag.questions.each do |q| %>
      <li><%= link_to q.title, question_path(q) %></li>
    <% end %>
  </ul>

  <h2>View blogs about <strong><%= @tag.name %></strong>:</h2>
  <ul><%= 'No blogs yet.' if @tag.blogs.empty? %>
    <% @tag.blogs.each do |q| %>
      <li><%= link_to q.title, blog_path(q) %></li>
    <% end %>
  </ul>
</div>
