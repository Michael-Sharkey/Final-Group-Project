<h1>Tag Show Page</h1>
<h2>Questions tagged with <%= @tag.name %></h2>
<%= 'No questions yet' if @tag.questions.empty? %>
<ul>
  <% @tag.questions.each do |q| %>
    <li><%= link_to q.title, question_path(q) %></li>
  <% end %>
</ul>

<h2>Blogs tagged with <%= @tag.name %></h2>
<%= 'No blogs yet' if @tag.blogs.empty? %>
<ul>
  <% @tag.blogs.each do |q| %>
    <li><%= link_to q.title, blog_path(q) %></li>
  <% end %>
</ul>
